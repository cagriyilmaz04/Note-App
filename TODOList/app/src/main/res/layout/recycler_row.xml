<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    android:layout_height="180dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#00bbd3"
        android:layout_height="180dp">
        <TextView
            android:id="@+id/textView_position"
            android:layout_width="49dp"
            android:layout_height="113dp"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_baslik"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_baslik" />

        <TextView
            android:id="@+id/textView_baslik"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="58dp"
            android:gravity="center"
            android:text="@string/baslik"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/textView_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_position"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/textView_hint"
            android:layout_width="209dp"
            android:layout_height="40dp"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:text="@string/notu_gormek"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView_baslik"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_baslik" />

        <TextView
            android:id="@+id/text_olusturulma_tarihi"
            android:layout_width="211dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.807"
            app:layout_constraintStart_toEndOf="@+id/textView_position"
            app:layout_constraintTop_toBottomOf="@+id/textView_hint"
            app:layout_constraintVertical_bias="0.285" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>